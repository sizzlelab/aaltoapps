<h1><%= _("Listing ratings") %></h1>

<table>
  <tr>
    <th><%= _("User") %></th>
    <th><%= _("Product") %></th>
    <th><%= _("Rating") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @ratings.each do |rating| %>
  <tr>
    <td><%= rating.user_id %></td>
    <td><%= rating.product_id %></td>
    <td><%= rating.rating %></td>
    <td><%= link_to _('Show'), rating %></td>
    <td><%= link_to _('Edit'), edit_rating_path(rating) %></td>
    <td><%= link_to _('Destroy'), rating, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

