<% form_tag :controller => 'sessions' do %>
	<% if flash[:error] %>
    <div id="error_explanation">
      <%= flash[:error] %>
    </div>
  <% end %>
	<%= label_tag _("User name:") %><br />
	<%= text_field_tag "username" %><br />
	<%= label_tag _("Password:") %><br />
	<%= password_field_tag "password" %><br />
	<%= submit_tag _("Login") %>
<% end %>