<h1><%= _("Listing users") %></h1>

<table>
  <tr>
    <th><%= _("Username") %></th>
    <th><%= _("Firstname") %></th>
    <th><%= _("Lastname") %></th>
    <th><%= _("Email") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.firstname %></td>
    <td><%= user.lastname %></td>
    <td><%= user.email %></td>
    <td><%= link_to _('Show'), user %></td>
    <td><%= link_to _('Edit'), edit_user_path(user) %></td>
    <td><%= link_to _('Destroy'), user, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

