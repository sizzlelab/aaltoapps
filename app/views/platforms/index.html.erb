<h1><%= _("Listing platforms") %></h1>

<table>
  <tr>
    <th><%= _("Name") %></th>
    <th><%= _("Image url") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @platforms.each do |platform| %>
  <tr>
    <td><%= platform.name %></td>
    <td><%= link_to platform.image_url, platform.image_url %></td>
    <td><%= link_to _('Show'), :action => "show", :id => platform.id if can? :show, platform %></td>
    <td><%= link_to _('Edit'), :action => "edit", :id => platform.id if can? :edit, platform %></td>
    <td><%= button_to _('Destroy'), platform, :method => :delete,
                                    :confirm => _('Are you sure?') if can? :delete, platform %></td>
  </tr>
<% end %>
</table>

<br />

