<%= form_for(@product) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <p>Please fill in the following form. <br/>
       Fields marked with asterisk (*) are compulsory.</p>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :url %><br />
    <%= f.text_field :url %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :platform %><br />
    <%= f.select :platform, options_for_select([ "Java", "iPhone", "Symbian" ], "Java") %>
  </div>
  <div class="form_row">
    <%= f.label :donate %><br />
    <%= f.radio_button :donate, 'yes' %> Yes
    <%= f.radio_button :donate, 'no' %> No
  </div>
  <div class="form_row">
    <br />
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
