  <p>
    <b><%= _("Commenter") %>:</b>
    <%= comment.commenter.username %>

    <% if !comment.commenter_rating.nil? %>
      <%= render :partial => 'ratings/rating', :object => comment.commenter_rating %>
    <% else %>
      <%= _("User has not rated this app") %>
    <% end %>
  </p>
  <p>
    <b><%= _("Created at") %>: </b>
    <%= comment.created_at %>
  </p>
  <p>
    <b><%= _("Comment") %>: </b>
    <% if comment.commenter == current_user %>
      <%= render 'comment/form', :comment => comment %>
    <% else %>
      <%= comment.body %>
    <% end %>
  </p>

  <% if comment.commenter == current_user %>
    <%= button_to _('Delete'), comment, :confirm => _('Are you sure?'), :method => :delete %>
  <% end %>
