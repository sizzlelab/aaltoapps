		<%= label_tag :password %><br />
		<%= password_field_tag :password %>
	</div>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email %>
  </div>
	<div class="field">
		<%= label_tag :is_association, "Is an association?" %>
		<%= check_box_tag :is_association %>
	</div>
  <div class="actions">
    <%= submit_tag "Create" %>
  </div>
<% end %>
