<!DOCTYPE html>
<html>
<head>
  <title><%= _("Aalto Apps") %></title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>

  <script type="text/javascript" src="http://jqueryjs.googlecode.com/files/jquery-1.3.2.min.js"></script>
  <script type="text/javascript">
    $(document).ready(function() {
			$('.menutop:not(.menutop-open)') .addClass('menutop-closed') .parents('li') .children('ul') .hide();
			
			$('#menu .menutop') .click(function() {
			
				if ($(this) .hasClass('menutop-open')) {				
					$(this) .removeClass('menutop-open') .addClass('menutop-closed')  .parents    ('li') .children('ul') .slideUp(250);
					$(this) .parent('.menutop') .removeClass('menutop-open') .addClass('menutop-closed');
				}else{				
					$(this) .parent('.menutop') .removeClass('menutop-closed') .addClass('menutop-open');
					$(this) .removeClass('menutop-closed') .addClass('menutop-open') .parents('li') .children('ul') .slideDown(250);		  
				}
		    return false;
		  });
		});
  </script>


</head>
<body>
  <div class="wrapper">
    <div id="menu">
  		<ul class="navmenu">
    		<li><div class="menusingle"><%= link_to _("Home"), root_path %></div></li>
				<li><div class="menutop"><%= link_to _("Browse") %> </div>
      		<ul><div class="submenu">
        	<!--<%# list_platforms.each do |platform|%>
          	<li class="submenu_row"><%#= link_to platform.name, products_by_platform_path(platform, params[:sort]) %></li>
        	<%#end%>-->
						<li class="submenu_row"><%= link_to _("Platform1"), root_path %></li>
						<li class="submenu_row"><%= link_to _("Platform2"), root_path %></li>
						<li class="submenu_row"><%= link_to _("Platform3"), root_path %></li>
      		</div></ul>
    		</li>

    	 <!--<%# if logged_in? %>-->
      		<li><div class="menusingle"><%= link_to _("Publish"), root_path %></div></li>
    		<!--<%#end%>-->
 			</ul>
 		</div>

    <div class="layout_frame">
      <div class="layout_logo">
        <%= link_to _("Aalto Apps"), root_path %>
      </div>
      <div class="layout_search" align="right">
        <%=render :partial=>"/products/search"%>
      </div>
      <div class="layout_menu">
        <span class="layout_menuitem">
          <%= render :partial => "/users/login_menu" %>
        </span>
      </div>

      <div id="notice"><%= notice %></div>
      <div id="alert"><%= alert %></div>

      <div class="layout_master">
        <%= yield %>
      </div>

      <div class="layout_footer">
        <%= _("Official looking footer here") %>
      </div>
  
    </div>
		<div class="clear"></div>
  </div>


</body>
</html>
