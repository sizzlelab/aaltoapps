<%= form_tag('/users', :method => :post) do %>
  <% debugger; if flash[:error] %>
    <div id="error_explanation">
      <h2><%= pluralize(flash[:error].count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% flash[:error].each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
	<%= hidden_field_tag :consent, "FI1" %>
  <div class="field">
    <%= label_tag :username %><br />
