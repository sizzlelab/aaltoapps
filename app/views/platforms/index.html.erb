<h1><%= _("Listing platforms") %></h1>

<table>
  <tr>
    <th><%= _("Name") %></th>
    <th><%= _("Image url") %></th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @platforms.each do |platform| %>
  <tr>
    <td><%= platform.name %></td>
    <td><%= platform.image_url %></td>
    <td><%= link_to _('Show'), :action => "show", :id => platform.id %></td>
    <td><%= link_to _('Edit'), :action => "edit", :id => platform.id %></td>
    <td><%= link_to _('Destroy'), platform, :confirm => _('Are you sure?'), :method => :delete %></td>
  </tr>
<% end %>
</table>

